<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".waterView">
    <androidx.cardview.widget.CardView
        android:layout_width="339dp"
        android:layout_height="333dp"
        android:layout_marginHorizontal="10dp"
        android:scrollbars="vertical"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".deleteData">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardviewgrad">

            <TextView
                android:id="@+id/tv_wake"
                android:layout_width="137dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/tv_wake"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_weightx"
                app:layout_constraintEnd_toStartOf="@+id/tv_weightx"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_weightx"
                android:layout_width="74dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="TextView"
                app:layout_constraintBottom_toTopOf="@+id/tv_work"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_wake"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="189dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:text="@string/tv_work"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_work"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_work"
                android:layout_width="71dp"
                android:layout_height="39dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.289"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/tv_weightx" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="171dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:text="@string/tv_waketime"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_wakeX"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_wakeX"
                android:layout_width="132dp"
                android:layout_height="23dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/tv_work"
                app:layout_constraintVertical_bias="0.031" />

            <Button
                android:id="@+id/idbtnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/edit_expenses"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.557"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.82" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="171dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:text="@string/tv_bed"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_bedX"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_bedX"
                android:layout_width="106dp"
                android:layout_height="25dp"
                android:layout_marginTop="40dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.391"
                app:layout_constraintStart_toEndOf="@+id/textView33"
                app:layout_constraintTop_toBottomOf="@+id/tv_wakeX"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>