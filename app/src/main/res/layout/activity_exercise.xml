<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_colorX"
    tools:context=".exercise" >

    <Button
        android:id="@+id/btn_workout"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:layout_marginBottom="64dp"
        android:text="@string/btn_workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent" />

    <NumberPicker
        android:id="@+id/workout_picker"
        android:layout_width="177dp"
        android:layout_height="75dp"
        android:layout_marginTop="72dp"
        android:background="@color/bg_colorX"
        android:theme="@style/Theme.THYMU"
        app:layout_constraintBottom_toTopOf="@+id/btn_workout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView23"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/tv_water2"
        android:layout_width="210dp"
        android:layout_height="62dp"
        android:layout_marginTop="56dp"
        android:text="@string/tv_water"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_enter_exercise"
        android:layout_width="194dp"
        android:layout_height="79dp"
        android:layout_marginTop="8dp"
        android:text="@string/tv_enter_exercise"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_water2" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_exercise"
        app:srcCompat="@drawable/workout" />
</androidx.constraintlayout.widget.ConstraintLayout>