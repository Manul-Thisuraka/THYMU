<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    tools:context=".updateMedicine">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="543dp"
        android:layout_height="777dp"
        android:backgroundTint="@color/light_green"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <EditText
            android:id="@+id/medicineName"
            android:layout_width="401dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/edittext_background"
            android:hint="@string/input_name_medicine"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/medicineReason"
            android:layout_width="401dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView33"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/edittext_background"
            android:hint="@string/input_healthcondition"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/meidicneForm"
            android:layout_width="401dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView34"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/edittext_background"
            android:hint="@string/input_form"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/medicineTime"
            android:layout_width="401dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView40"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/edittext_background"
            android:hint="@string/input_day_time"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnMedicinePop"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:layout_below="@+id/meidicneForm"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="125dp"
            android:layout_marginEnd="189dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="21dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="143dp"
            android:text="@string/nameMedicine"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicineName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="20dp"
            android:text="@string/input_resaon"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicineReason"
            android:layout_alignParentStart="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="20dp"
            android:text="@string/input_formMEdi"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meidicneForm"
            android:layout_alignParentStart="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="20dp"
            android:text="@string/input_time"
            android:textColor="@color/black"
            android:textSize="16dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>